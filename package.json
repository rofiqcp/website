{
  "name": "scada-esp32-control",
  "version": "1.0.0",
  "description": "Website otomasi kendali SCADA untuk kontrol ESP32",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "install-all": "npm install && cd client && npm install",
    "deploy": "npm run build && gh-pages -d client/build"
  },
  "keywords": ["scada", "esp32", "automation", "iot", "control"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "axios": "^1.5.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.1",
    "gh-pages": "^6.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
